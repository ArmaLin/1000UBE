                    android:fontFamily="@font/inter_bold"
                    android:gravity="center"
                    android:paddingStart="0dp"
                    android:paddingEnd="60dp"
                    android:text="@string/Korea"
                    android:textColor="@drawable/check_text_white"
                    android:textSize="32sp" />

                <RadioButton
                    app:iTag="@{languageEnum.SUOMI.languageId}"
                    android:id="@+id/rbLanguage11"
                    android:layout_width="341.67dp"
                    android:layout_height="104dp"
                    android:layout_below="@id/rbLanguage12"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/selected_check_341"
                    android:button="@null"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="center"
                    android:paddingStart="0dp"
                    android:paddingEnd="40dp"
                    android:text="@string/Suomi"
                    android:textColor="@drawable/check_text_white"
                    android:textSize="32sp" />

                <RadioButton
                    app:iTag="@{languageEnum.FRANCE.languageId}"
                    android:id="@+id/rbLanguage12"
                    android:layout_width="341.67dp"
                    android:layout_height="104dp"
                    android:layout_below="@id/rbLanguage9"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/selected_check_341"
                    android:button="@null"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="center"
                    android:paddingStart="0dp"
                    android:paddingEnd="60dp"
                    android:text="@string/fran_ais"
                    android:textColor="@drawable/check_text_white"
                    android:textSize="32sp" />

                <RadioButton
                    app:iTag="@{languageEnum.JAPAN.languageId}"
                    android:id="@+id/rbLanguage13"
                    android:layout_width="341.67dp"
                    android:layout_height="104dp"
                    android:layout_below="@id/rbLanguage10"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="32dp"
                    android:layout_toEndOf="@+id/rbLanguage12"
                    android:background="@drawable/selected_check_341"
                    android:button="@null"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="center"
                    android:paddingStart="0dp"
                    android:paddingEnd="60dp"
                    android:text="@string/japanese"
                    android:textColor="@drawable/check_text_white"
                    android:textSize="32sp" />

            </com.dyaco.spirit_commercial.support.custom_view.RelativeRadioGroup>


            <View
                android:id="@+id/v_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/half_transparent20"
                android:clickable="true"
                android:visibility="visible"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>

</layout>