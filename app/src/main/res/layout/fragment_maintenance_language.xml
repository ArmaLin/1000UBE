                    android:paddingStart="0dp"
                    android:paddingEnd="40dp"
                    app:iTag="@{languageEnum.GERMAN.languageId}"
                    android:text="@string/deutsch"
                    android:textColor="@drawable/check_text_white"
                    android:textSize="32sp" />

                <RadioButton
                    android:enabled="false"
                    android:id="@+id/rbLanguage6"
                    android:layout_width="341.67dp"
                    android:layout_height="104dp"
                    android:layout_below="@id/rbLanguage1"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="32dp"
                    android:layout_toEndOf="@+id/rbLanguage5"
                    android:background="@drawable/selected_check_341"
                    android:button="@null"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="center"
                    android:paddingStart="0dp"
                    android:paddingEnd="60dp"
                    app:iTag="@{languageEnum.PORTUGAL.languageId}"
                    android:text="@string/portugues"
                    android:textColor="@drawable/check_text_white"
                    android:textSize="32sp" />

                <RadioButton
                    app:iTag="@{languageEnum.SIMPLIFIED_CHINESE.languageId}"
                    android:id="@+id/rbLanguage7"
                    android:layout_width="341.67dp"
                    android:layout_height="104dp"
                    android:layout_below="@id/rbLanguage3"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="32dp"
                    android:layout_toEndOf="@+id/rbLanguage9"
                    android:background="@drawable/selected_check_341"
                    android:button="@null"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="center"
                    android:paddingStart="0dp"
                    android:paddingEnd="60dp"
                    android:text="@string/simplified_chinese"
                    android:textColor="@drawable/check_text_white"
                    android:textSize="32sp" />

                <RadioButton
                    android:enabled="false"
                    app:iTag="@{languageEnum.NEDERLANDS.languageId}"
                    android:id="@+id/rbLanguage8"
                    android:layout_width="341.67dp"
                    android:layout_height="104dp"
                    android:layout_below="@id/rbLanguage5"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/selected_check_341"
                    android:button="@null"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="center"
                    android:paddingStart="0dp"
                    android:paddingEnd="40dp"
                    android:text="@string/Nederlands"
                    android:textColor="@drawable/check_text_white"
                    android:textSize="32sp" />

                <RadioButton
                    android:id="@+id/rbLanguage9"
                    android:layout_width="341.67dp"
                    android:layout_height="104dp"
                    android:layout_below="@id/rbLanguage8"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/selected_check_341"
                    android:button="@null"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="center"
                    android:paddingStart="0dp"
                    android:paddingEnd="60dp"
                    android:text="@string/Italiano"
                    app:iTag="@{languageEnum.ITALIAN.languageId}"
                    android:textColor="@drawable/check_text_white"
                    android:textSize="32sp" />

                <RadioButton
                    android:enabled="false"
                    app:iTag="@{languageEnum.KOREA.languageId}"
                    android:id="@+id/rbLanguage10"
                    android:layout_width="341.67dp"
