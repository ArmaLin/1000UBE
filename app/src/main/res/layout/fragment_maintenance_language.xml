<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="languageEnum"
            type="com.dyaco.spirit_commercial.support.intdef.LanguageEnum" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        tools:context=".maintenance_mode.MaintenanceLanguageFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="1185dp"
            android:layout_height="match_parent"
            android:background="@drawable/panel_bg_left_32_1c242a">

            <androidx.appcompat.widget.AppCompatTextView
                android:gravity="center_vertical"
                android:maxLines="1"
                android:autoSizeMaxTextSize="70sp"
                android:autoSizeTextType="uniform"
                android:layout_marginEnd="56dp"
                app:layout_constraintEnd_toStartOf="@+id/btnDone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="56dp"
                android:layout_marginTop="56dp"
                android:fontFamily="@font/inter_bold"
                android:text="@string/Language"
                android:textColor="@color/white"
                android:textSize="70sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButton
                style="@style/MButton_252e37"
                android:id="@+id/btnDone"
                android:paddingStart="40dp"
                android:paddingEnd="40dp"
                android:layout_width="wrap_content"
                android:layout_height="88dp"
                android:layout_marginTop="56dp"
                android:layout_marginEnd="56dp"
                android:text="@string/Done"
                android:textSize="24sp"
                app:icon="@drawable/icon_check"
                app:iconGravity="textEnd"
                app:iconPadding="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <com.dyaco.spirit_commercial.support.custom_view.RelativeRadioGroup
                android:id="@+id/rgSelectLanguage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="56dp"
                android:layout_marginTop="212dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <RadioButton
                    android:id="@+id/rbLanguage1"
                    android:layout_width="341.67dp"
                    android:layout_height="104dp"
                    android:background="@drawable/selected_check_341"
                    android:button="@null"
                    android:checked="true"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="center"
                    android:paddingStart="0dp"
                    android:paddingEnd="40dp"
                    tools:text="@string/English"
                    android:text="@{languageEnum.ENGLISH.languageStr}"
                    app:iTag="@{languageEnum.ENGLISH.languageId}"
                    android:textColor="@drawable/check_text_white"
                    android:textSize="32sp" />

                <RadioButton
                    android:id="@+id/rbLanguage2"
                    android:layout_width="341.67dp"
                    android:layout_height="104dp"
                    android:layout_marginStart="32dp"
                    android:layout_toEndOf="@+id/rbLanguage1"
                    android:background="@drawable/selected_check_341"
                    android:button="@null"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="center"
                    android:paddingStart="0dp"
                    android:paddingEnd="60dp"
                    tools:text="@string/EspaÃ±ol"
                    android:text="@{languageEnum.SPAIN.languageStr}"
                    android:textColor="@drawable/check_text_white"
                    android:textSize="32sp"
                    app:iTag="@{languageEnum.SPAIN.languageId}" />

                <RadioButton
                    android:id="@+id/rbLanguage3"
                    android:layout_width="341.67dp"
                    android:layout_height="104dp"
                    android:layout_below="@+id/rbLanguage6"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="32dp"
                    android:layout_toEndOf="@+id/rbLanguage8"
                    android:background="@drawable/selected_check_341"
                    android:button="@null"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="center"
                    android:paddingStart="0dp"
                    android:paddingEnd="60dp"
                    tools:text="@string/Traditional_Chinese"
                    android:text="@{languageEnum.TRADITIONAL_CHINESE.languageStr}"
                    android:textColor="@drawable/check_text_white"
                    android:textSize="32sp"
                    app:iTag="@{languageEnum.TRADITIONAL_CHINESE.languageId}" />

                <RadioButton
                    android:enabled="true"
                    android:id="@+id/rbLanguage4"
                    android:layout_width="341.67dp"
                    android:layout_height="104dp"
                    android:layout_marginStart="32dp"
                    android:layout_toEndOf="@+id/rbLanguage3"
                    android:background="@drawable/selected_check_341"
                    android:button="@null"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="center"
                    android:paddingStart="0dp"
                    android:paddingEnd="60dp"
                    android:text="@string/Pyccknn"
                    android:textColor="@drawable/check_text_white"
                    android:textSize="32sp"
                    app:iTag="@{languageEnum.RUSSIA.languageId}" />

                <RadioButton
                    android:id="@+id/rbLanguage5"
                    android:layout_width="341.67dp"
