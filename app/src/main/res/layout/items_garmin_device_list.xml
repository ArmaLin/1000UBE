<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/cl_base"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:layout_width="734dp"
    android:layout_height="102dp"
    xmlns:tools="http://schemas.android.com/tools">

<!--    android:background="@color/color201396ef"-->

<!--    <androidx.appcompat.widget.AppCompatImageView-->
<!--        android:background="@drawable/icon_garmin"-->
<!--        android:layout_marginStart="56dp"-->
<!--        android:id="@+id/ivHrIcon"-->
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        app:layout_constraintTop_toTopOf="parent"-->
<!--        app:layout_constraintBottom_toBottomOf="parent"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content" />-->

    <com.dyaco.spirit_commercial.support.custom_view.CustomRadioButton
        android:padding="20dp"
        android:gravity="center"
        android:drawableStart="@drawable/radiobutton_ga"
        android:id="@+id/cbSelectData"
        android:button="@null"
        android:checked="true"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toStartOf="@+id/tvHrTitle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:maxLines="1"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:fontFamily="@font/inter_regular"
        android:textSize="32sp"
        android:textColor="@color/white"
        tools:text="Forerunner 21312312235"
        android:layout_marginStart="136dp"
        android:id="@+id/tvHrTitle"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:visibility="visible"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="@+id/tvConnected"
        app:layout_constraintBottom_toBottomOf="@+id/tvConnected"
        app:layout_constraintEnd_toStartOf="@+id/tvConnected"
        android:id="@+id/ivConnected"
        android:tint="@color/color1396ef"
        android:src="@drawable/icon_garmin_devices_connected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:visibility="visible"
        android:id="@+id/tvConnected"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnDelete"
        android:layout_marginEnd="4dp"
        android:fontFamily="@font/inter_bold"
        android:textSize="24sp"
        android:text="@string/Connected"
        android:textColor="@color/color1396ef"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.appcompat.widget.AppCompatButton
        android:visibility="invisible"
        android:id="@+id/btnConnect"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="108dp"
        android:fontFamily="@font/inter_bold"
        android:textSize="24sp"
        android:text="@string/Connect"
        android:textColor="@color/color1396ef"
        android:background="@drawable/panel_bg_all_16_252e37_2"
        android:layout_width="141dp"
        android:layout_height="56dp" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btnDelete"
        android:padding="20dp"
        android:background="@null"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/btn_delete"
        android:layout_marginEnd="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/vConnectedUnderline"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/color1396ef"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>
