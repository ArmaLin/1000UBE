<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="1024dp"
    android:background="@android:color/transparent"
    android:id="@+id/baseView"
    tools:context=".settings.MemberProfileAvatarEditorWindow">


    <com.google.android.material.button.MaterialButton
        style="@style/MButton_252e37"
        app:shapeAppearanceOverlay="@style/roundedCornerTop"
        android:id="@+id/btn_close"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:layout_width="wrap_content"
        android:layout_height="88dp"
        android:layout_marginEnd="56dp"
        android:text="@string/Cancel"
        android:textSize="24sp"
        app:icon="@drawable/icon_cancel"
        app:iconGravity="textEnd"
        app:iconPadding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/panel_bg_top_1c242a"
        android:layout_gravity="bottom"
        android:id="@+id/v_1"
        android:layout_width="match_parent"
        android:layout_height="936dp" />


    <androidx.recyclerview.widget.RecyclerView
        app:layout_constraintTop_toBottomOf="@+id/btn_close"
        android:id="@+id/recyclerview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fadeScrollbars="false"
        android:overScrollMode="never"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.dyaco.spirit_commercial.support.custom_view.placeholder.MockPlaceHolder
        android:id="@+id/placeholderView"
        android:layout_marginTop="21dp"
        app:layoutRes="@layout/placeholder_mock_main"
        app:repeat="4"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="@+id/recyclerview"
        app:layout_constraintBottom_toBottomOf="@+id/recyclerview"
        android:layout_height="0dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>