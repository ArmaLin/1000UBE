<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".dashboard_training.ProgramsBannerFragment">

    <com.google.android.material.button.MaterialButton
        style="@style/MButton_252e37"
        android:id="@+id/btnBack"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:layout_width="wrap_content"
        android:layout_height="88dp"
        android:text="@string/back"
        android:textSize="24sp"
        app:icon="@drawable/icon_back"
        app:iconGravity="textStart"
        app:iconPadding="12dp"
        app:iconTint="@color/colorADB8C2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginStart="48dp" />

    <TextView
        app:layout_constraintStart_toEndOf="@+id/btnBack"
        tools:text="@string/manual"
        android:includeFontPadding="false"
        android:fontFamily="@font/inter_bold"
        android:id="@+id/programTypeName"
        android:layout_marginStart="48dp"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="@+id/btnBack"
        app:layout_constraintTop_toTopOf="@+id/btnBack"
        android:textColor="@color/white"
        android:textSize="70sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />

    <com.dyaco.spirit_commercial.support.custom_view.banner.indicator.CircleIndicator
        android:layout_marginTop="86dp"
        android:layout_marginEnd="58dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/indicator"
        android:layout_width="300dp"
        android:layout_height="12dp" />


    <com.dyaco.spirit_commercial.support.custom_view.banner.Banner
        android:layout_marginTop="168dp"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/programsBanner"
        android:layout_width="1872dp"
        android:layout_height="712dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>