<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="904dp"
    android:background="@android:color/transparent"
    android:id="@+id/baseView"
    tools:context=".login.CreateAccountHeightFragmentBottom">


    <com.google.android.material.button.MaterialButton
        android:letterSpacing="0.01"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:id="@+id/btn_close"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:layout_width="wrap_content"
        android:layout_height="88dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="56dp"
        android:background="@drawable/panel_close"
        android:fontFamily="@font/inter_bold"
        android:stateListAnimator="@null"
        android:text="@string/Close"
        android:textAllCaps="false"
        android:textColor="@color/colorADB8C2"
        android:textSize="24sp"
        app:backgroundTint="@color/color252e37"
        app:backgroundTintMode="src_in"
        app:icon="@drawable/icon_cancel"
        app:iconGravity="textEnd"
        app:iconPadding="12dp"
        app:iconTint="@color/colorADB8C2"
        app:layout_constraintBottom_toTopOf="@+id/v_1"
        app:layout_constraintEnd_toEndOf="parent" />


    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintBottom_toTopOf="@+id/btnNext"
        android:background="@drawable/panel_bg_top_1c242a"
        android:layout_gravity="bottom"
        android:id="@+id/v_1"
        android:layout_width="match_parent"
        android:layout_height="736dp" >

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_marginStart="28dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/element_pagination_onboarding_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/stext"
            android:includeFontPadding="false"
            android:layout_marginTop="332dp"
            android:textColor="@color/white"
            android:text="@string/what_is_your_height"
            android:textSize="54sp"
            android:fontFamily="@font/inter_regular"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="261dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



        <com.dyaco.spirit_commercial.support.custom_view.wheelPicker.OptionsPickerView
            android:layout_marginStart="1063dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/topLine"
            app:layout_constraintBottom_toTopOf="@+id/bottomLine"
            android:id="@+id/pickFtHeight"
            android:fontFamily="@font/inter_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginStart="1230dp"
            android:includeFontPadding="false"
            android:gravity="center"
            android:fontFamily="@font/inter_bold"
            android:textSize="54sp"
            android:textColor="@color/white"
            android:text="@string/ft"
            android:id="@+id/unitFt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/topLine"
            app:layout_constraintBottom_toTopOf="@+id/bottomLine"
            android:layout_width="213dp"
            android:layout_height="64dp" />

        <com.dyaco.spirit_commercial.support.custom_view.wheelPicker.OptionsPickerView
            android:layout_marginStart="1536dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/topLine"
            app:layout_constraintBottom_toTopOf="@+id/bottomLine"
            android:id="@+id/pickInHeight"
            android:fontFamily="@font/inter_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginStart="1684dp"
            android:includeFontPadding="false"
            android:gravity="center"
            android:fontFamily="@font/inter_bold"
            android:textSize="54sp"
            android:textColor="@color/white"
            android:text="@string/in"
            android:id="@+id/unitIn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/topLine"
            app:layout_constraintBottom_toTopOf="@+id/bottomLine"
            android:layout_width="213dp"
            android:layout_height="64dp" />


        <com.dyaco.spirit_commercial.support.custom_view.wheelPicker.OptionsPickerView
            android:visibility="gone"
            android:layout_marginStart="300dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/topLine"
            app:layout_constraintBottom_toTopOf="@+id/bottomLine"
            android:id="@+id/pickCmHeight"
            android:fontFamily="@font/inter_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:visibility="gone"
            android:includeFontPadding="false"
            android:gravity="center"
            android:fontFamily="@font/inter_bold"
            android:textSize="54sp"
            android:textColor="@color/white"
            android:text="@string/cm"
            android:layout_marginEnd="200dp"
            android:id="@+id/unitCM"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/topLine"
            app:layout_constraintBottom_toTopOf="@+id/bottomLine"
            android:layout_width="213dp"
            android:layout_height="64dp" />

        <View
            android:id="@+id/topLine"
            android:layout_marginTop="312dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/color252e37"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>

        <View
            android:id="@+id/bottomLine"
            android:layout_marginBottom="318dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/color252e37"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>


        <com.addisonelliott.segmentedbutton.SegmentedButtonGroup
            android:id="@+id/sc_unit"
            android:layout_width="183dp"
            android:layout_height="48dp"
            android:layout_marginTop="30dp"
            android:background="@color/color323f4b"
            app:draggable="true"
            app:layout_constraintStart_toStartOf="@+id/stext"
            app:layout_constraintTop_toBottomOf="@+id/bottomLine"
            app:position="0"
            app:radius="16dp"
            app:ripple="false"
            app:selectedBackground="@color/color1396ef"
            app:selectedButtonRadius="16dp"
            app:selectionAnimationDuration="200">

            <com.addisonelliott.segmentedbutton.SegmentedButton
                android:contentDescription="@string/Imperial"
                android:layout_width="85dp"
                android:layout_height="36dp"
                android:fontFamily="@font/inter_semibold"
                app:selectedTextColor="@color/white"
                app:selectedTextStyle="normal"
                app:text="@string/Imperial"
                app:textColor="@color/color8192a2"
                app:textSize="18sp"
                tools:ignore="TouchTargetSizeCheck" />

            <com.addisonelliott.segmentedbutton.SegmentedButton
                android:contentDescription="@string/Metric"
                android:layout_width="85dp"
                android:layout_height="36dp"
                android:fontFamily="@font/inter_semibold"
                android:letterSpacing="0.226"
                android:lineSpacingExtra="1.5sp"
                app:selectedTextColor="@color/white"
                app:selectedTextStyle="normal"
                app:text="@string/Metric"
                app:textColor="@color/color8192a2"
                app:textSize="18sp"
                tools:ignore="TouchTargetSizeCheck" />

        </com.addisonelliott.segmentedbutton.SegmentedButtonGroup>


    </androidx.constraintlayout.widget.ConstraintLayout>



    <androidx.appcompat.widget.AppCompatButton
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:fontFamily="@font/inter_bold"
        android:stateListAnimator="@null"
        android:textAllCaps="false"
        android:id="@+id/btnBack"
        android:background="@color/color252e37"
        android:gravity="center"
        android:textSize="32sp"
        android:textColor="@color/white"
        android:text="@string/back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnNext"
        android:layout_width="0dp"
        android:layout_height="96dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:fontFamily="@font/inter_bold"
        android:stateListAnimator="@null"
        android:textAllCaps="false"
        app:layout_constraintStart_toEndOf="@+id/btnBack"
        android:id="@+id/btnNext"
        android:background="@color/color1396ef"
        android:gravity="center"
        android:textSize="32sp"
        android:textColor="@color/white"
        android:text="@string/Next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="96dp" />

</androidx.constraintlayout.widget.ConstraintLayout>