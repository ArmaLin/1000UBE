<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fl_root"
    android:layout_width="187dp"
    android:background="@drawable/bg_sound_control"
    android:layout_height="match_parent"
    tools:context=".settings.SoundPopupWindow">
<!--+51-->

    <androidx.appcompat.widget.AppCompatImageButton
        android:layout_marginStart="51dp"
        android:background="@drawable/btn_sound_plus"
        android:id="@+id/btnVolumePlus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/vLine1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/vLine1"
        android:background="@color/color323f4b"
        android:layout_marginTop="135dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="136dp"
        android:layout_height="2dp"/>

    <View
        android:id="@+id/vLine2"
        android:background="@color/color323f4b"
        android:layout_marginTop="807dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="136dp"
        android:layout_height="2dp"/>

    <com.jaygoo.widget.VerticalRangeSeekBar
        android:layout_marginStart="51dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/soundSeekBar"
        app:rsb_min_interval="0"
        app:rsb_gravity="center"
        app:rsb_progress_height="16dp"
        app:rsb_progress_radius="1dp"
        app:rsb_progress_default_color="@color/color445565"
        app:rsb_progress_color="@color/color1396ef"
        app:rsb_max="15"
        app:rsb_min="0"
        app:rsb_thumb_height="112dp"
        app:rsb_thumb_width="112dp"
        app:rsb_thumb_drawable="@drawable/element_drag_v"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:rsb_mode="single"
        app:layout_constraintBottom_toTopOf="@+id/vLine2"
        app:layout_constraintTop_toBottomOf="@+id/vLine1" />



    <View
        android:id="@+id/vLine3"
        android:background="@color/color323f4b"
        android:layout_marginTop="943dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="136dp"
        android:layout_height="2dp"/>
    <androidx.appcompat.widget.AppCompatImageButton
        android:layout_marginStart="51dp"
        android:background="@drawable/btn_sound_minus"
        android:id="@+id/btnVolumeMinus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/vLine3"
        app:layout_constraintTop_toBottomOf="@+id/vLine2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <CheckBox
        android:id="@+id/cbMute"
        android:checked="true"
        android:button="@null"
        android:background="@drawable/btn_sound_check"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</androidx.constraintlayout.widget.ConstraintLayout>
