<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="deviceSettingViewModel"
            type="com.dyaco.spirit_commercial.viewmodel.DeviceSettingViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        tools:context=".maintenance_mode.MaintenanceRetailModeVideoFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="1920dp"
            android:layout_height="match_parent"
            android:background="@color/color1c242a">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTitle1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="56dp"
                android:layout_marginTop="56dp"
                android:layout_marginEnd="56dp"
                android:autoSizeMaxTextSize="70sp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/inter_bold"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="@string/change_retail_video"
                android:textColor="@color/white"
                android:textSize="70sp"
                app:layout_constraintEnd_toStartOf="@+id/btnDone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDone"
                style="@style/MButton_252e37"
                android:layout_width="wrap_content"
                android:layout_height="88dp"
                android:layout_marginTop="56dp"
                android:layout_marginEnd="56dp"
                android:elevation="3dp"
                android:paddingStart="40dp"
                android:paddingEnd="40dp"
                android:text="@string/Close"
                android:textSize="24sp"
                app:icon="@drawable/icon_cancel"
                app:iconGravity="textEnd"
                app:iconPadding="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButton
                app:strokeWidth="1dp"
                app:strokeColor="@color/color252e37"
                android:enabled="false"
                android:id="@+id/btnApply"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:fontFamily="@font/inter_bold"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:letterSpacing="0.01"
                android:stateListAnimator="@null"
                android:text="@string/update_video"
                android:textAllCaps="false"
                android:textColor="@color/btn_white_5a7085"
                android:textSize="32sp"
                app:backgroundTint="@color/btn_1396ef_1c242a"
                app:iconGravity="textStart"
                app:iconPadding="10dp"
                app:iconTint="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:rippleColor="@android:color/transparent" />



            <TextView
                android:id="@+id/tvDesc1"
                android:textColor="@color/white"
                android:textSize="32sp"
                android:fontFamily="@font/inter_regular"
                android:text="@string/change_video_desc"
                android:layout_marginTop="304dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="1062dp"
                android:layout_width="689dp"
                android:layout_height="wrap_content"/>

            <TextView
                app:layout_constraintTop_toBottomOf="@+id/tvDesc1"
                android:id="@+id/tvDesc2"
                android:textColor="@color/colorADB8C2"
                android:textSize="24sp"
                android:fontFamily="@font/inter_bold"
                android:text="@string/file_requirements"
                android:layout_marginTop="56dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="1062dp"
                android:layout_width="689dp"
                android:layout_height="wrap_content"/>


            <androidx.appcompat.widget.AppCompatTextView
                android:drawablePadding="12dp"
                android:drawableStart="@drawable/icon_dot_16"
                app:layout_constraintTop_toBottomOf="@+id/tvDesc2"
                android:id="@+id/tvW1"
                android:textColor="@color/colorADB8C2"
                android:textSize="24sp"
                android:fontFamily="@font/inter_regular"
                android:text="@string/mp4_format"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="@+id/tvDesc2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <androidx.appcompat.widget.AppCompatTextView
                android:drawablePadding="12dp"
                android:drawableStart="@drawable/icon_dot_16"
                app:layout_constraintTop_toBottomOf="@+id/tvW1"
                android:id="@+id/tvW2"
                android:textColor="@color/colorADB8C2"
                android:textSize="24sp"
                android:fontFamily="@font/inter_regular"
                android:text="@string/_1920_1080_px"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="@+id/tvDesc2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:drawablePadding="12dp"
                android:drawableStart="@drawable/icon_dot_16"
                app:layout_constraintTop_toBottomOf="@+id/tvW2"
                android:id="@+id/tvW3"
                android:textColor="@color/colorADB8C2"
                android:textSize="24sp"
                android:fontFamily="@font/inter_regular"
                android:text="@string/must_not_exceed_100_mb"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="@+id/tvDesc2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:drawablePadding="12dp"
                android:drawableStart="@drawable/icon_dot_16"
                app:layout_constraintTop_toBottomOf="@+id/tvW3"
                android:id="@+id/tvW4"
                android:textColor="@color/colorADB8C2"
                android:textSize="24sp"
                android:fontFamily="@font/inter_regular"
                android:text="@string/named_retail_mp4"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="@+id/tvDesc2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <View
                android:id="@+id/bg_video"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="302dp"
                android:layout_marginStart="103dp"
                android:background="@drawable/bg_preview_video"
                android:layout_width="888dp"
                android:layout_height="552dp"/>

            <TextView
                android:id="@+id/tvPer"
                android:layout_marginTop="230dp"
                app:layout_constraintEnd_toEndOf="@+id/bg_video"
                app:layout_constraintStart_toStartOf="@+id/bg_video"
                app:layout_constraintTop_toTopOf="@+id/bg_video"
                android:textColor="@color/color8192a2"
                android:fontFamily="@font/inter_regular"
                android:textSize="24sp"
                android:text="@string/no_usb_device_detected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <VideoView
                android:background="@drawable/panel_bg_vvv"
                android:visibility="invisible"
                android:layout_marginTop="300dp"
                android:layout_marginStart="160dp"
                android:layout_height="436dp"
                android:layout_width="772dp"
                android:id="@+id/videoView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <View
                android:background="@drawable/panel_bg_error"
                android:id="@+id/vError"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="300dp"
                android:layout_marginStart="160dp"
                android:layout_width="772dp"
                android:layout_height="436dp"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:src="@drawable/icon_warning_40"
                android:id="@+id/ivError"
                android:layout_marginBottom="224dp"
                app:layout_constraintStart_toStartOf="@+id/vError"
                app:layout_constraintEnd_toEndOf="@+id/vError"
                app:layout_constraintBottom_toBottomOf="@+id/vError"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvError"
                android:fontFamily="@font/inter_regular"
                android:textSize="24sp"
                android:layout_marginBottom="168dp"
                app:layout_constraintStart_toStartOf="@+id/vError"
                app:layout_constraintEnd_toEndOf="@+id/vError"
                app:layout_constraintBottom_toBottomOf="@+id/vError"
                android:text="@string/no_suitable_files_found"
                android:textColor="@color/colore24b44"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.constraintlayout.widget.Group
                android:visibility="gone"
                android:id="@+id/g_error"
                app:constraint_referenced_ids="vError,ivError,tvError"
                android:layout_width="0dp"
                android:layout_height="0dp"/>


            <ProgressBar
                android:visibility="gone"
                android:indeterminate="true"
                android:indeterminateDrawable="@drawable/progressbar_hr"
                android:id="@+id/progress"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

<!--            <com.github.lzyzsd.circleprogress.CircleProgress-->
<!--                android:visibility="gone"-->
<!--                app:circle_text_size="12sp"-->
<!--                custom:donut_text_size="20sp"-->
<!--                custom:donut_text_color="@color/white"-->
<!--                custom:circle_unfinished_color="@color/white_tran"-->
<!--                custom:circle_finished_color="@color/color80201396ef"-->
