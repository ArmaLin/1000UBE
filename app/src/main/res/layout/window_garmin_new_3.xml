    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/pingCodeLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="376dp"
        android:layout_marginBottom="18dp"
        android:gravity="center_vertical"
        android:imeOptions="actionDone"
        android:textColorHint="@color/color5a7085"
        app:endIconDrawable="@drawable/ic_clear_white_24dp"
        app:endIconMode="clear_text"
        app:endIconTint="@null"
        app:errorTextAppearance="@style/text_in_layout_error_hint_Style"
        app:hintEnabled="false"
        app:layout_constraintBottom_toTopOf="@+id/lineline"
        app:layout_constraintEnd_toEndOf="@+id/lineline"
        app:layout_constraintStart_toStartOf="@+id/lineline">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etPingCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:defaultFocusHighlightEnabled="false"
            android:fontFamily="@font/inter_regular"
            android:hint="@string/Input_Code"
            android:inputType="numberPassword"
            android:maxLength="6"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/white"
            android:textSize="44sp"
            tools:ignore="TextContrastCheck"
            tools:text="" />

    </com.google.android.material.textfield.TextInputLayout>

    <View
        android:id="@+id/lineline"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="398dp"
        android:layout_marginEnd="64dp"
        android:background="@color/color323f4b"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnBack"
        android:layout_width="0dp"
        android:layout_height="96dp"
        android:background="@color/color252e37"
        android:fontFamily="@font/inter_bold"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:gravity="center"
        android:stateListAnimator="@null"
        android:text="@string/Back"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnConfirm"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnConfirm"
        android:layout_width="0dp"
        android:layout_height="96dp"
        android:background="@color/color1396ef"
        android:fontFamily="@font/inter_bold"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:gravity="center"
        android:stateListAnimator="@null"
        android:text="@string/Confirm"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnBack" />

