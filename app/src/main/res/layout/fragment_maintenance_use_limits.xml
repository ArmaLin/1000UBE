                android:layout_height="64dp"
                android:layout_marginStart="26dp"
                android:background="@drawable/panel_bg_all_16_252e37"
                android:fontFamily="@font/inter_bold"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/pickPauseAfterHour"
                app:layout_constraintStart_toEndOf="@+id/pickPauseAfterMin"
                app:layout_constraintTop_toTopOf="@+id/pickPauseAfterHour" />


            <com.dyaco.spirit_commercial.support.custom_view.wheelPicker.OptionsPickerView
                android:id="@+id/pickUseTimeLimitHour"
                android:layout_width="340.33dp"
                android:layout_height="64dp"
                android:layout_marginStart="56dp"
                android:layout_marginTop="600dp"
