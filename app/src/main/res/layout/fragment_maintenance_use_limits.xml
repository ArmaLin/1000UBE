            <TextView
                android:layout_width="10dp"
                android:layout_height="32dp"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/inter_bold"
                android:includeFontPadding="false"
                android:text="."
                android:textColor="@color/white"
