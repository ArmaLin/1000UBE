            <com.dyaco.spirit_commercial.support.custom_view.wheelPicker.OptionsPickerView
                android:id="@+id/pickMaxIncline"
                android:layout_width="1073dp"
                android:layout_height="64dp"
                android:layout_marginStart="56dp"
                android:layout_marginTop="952dp"
                android:background="@drawable/panel_bg_all_16_252e37"
                android:fontFamily="@font/inter_bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <View
                android:id="@+id/hidePauseAfter"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:alpha="0.8"
                android:background="@color/color1c242a"
                android:clickable="true"
                app:layout_constraintBottom_toBottomOf="@+id/lineSS2"
                app:layout_constraintEnd_toEndOf="@+id/lineSS1"
                app:layout_constraintStart_toStartOf="@+id/lineSS1"
                app:layout_constraintTop_toTopOf="@+id/lineSS1" />


        </androidx.constraintlayout.widget.ConstraintLayout>
