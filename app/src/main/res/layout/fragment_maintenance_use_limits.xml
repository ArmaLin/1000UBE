            <com.dyaco.spirit_commercial.support.custom_view.wheelPicker.OptionsPickerView
                android:id="@+id/picUseTimeLimitMin"
                android:layout_width="340.33dp"
                android:layout_height="64dp"
                android:layout_marginStart="26dp"
                android:background="@drawable/panel_bg_all_16_252e37"
                android:fontFamily="@font/inter_bold"
                app:layout_constraintBottom_toBottomOf="@+id/pickUseTimeLimitHour"
                app:layout_constraintStart_toEndOf="@+id/pickUseTimeLimitHour"
                app:layout_constraintTop_toTopOf="@+id/pickUseTimeLimitHour" />

            <TextView
                android:layout_width="10dp"
                android:layout_height="32dp"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/inter_bold"
                android:includeFontPadding="false"
                android:text=":"
                android:textColor="@color/white"
                android:textSize="32sp"
                app:layout_constraintBottom_toBottomOf="@+id/picUseTimeLimitMin"
