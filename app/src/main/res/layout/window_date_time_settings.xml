<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fl_root"
    android:layout_width="match_parent"
    android:layout_height="904dp"
    tools:context=".maintenance_mode.DateTimeSettingWindow">
    <!-- +24-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:id="@+id/btn_close"
        android:paddingStart="2dp"
        android:paddingEnd="30dp"
        android:layout_width="wrap_content"
        android:layout_height="88dp"
        android:layout_marginEnd="48dp"
        android:background="@drawable/panel_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="82dp"
            android:layout_height="32dp"
            android:layout_marginStart="34dp"
            android:layout_marginTop="28dp"
            android:text="@string/Cancel"
            android:textColor="@color/colorADB8C2"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:src="@drawable/icon_cancel"
            app:layout_constraintBottom_toBottomOf="@+id/tv_cancel"
            app:layout_constraintStart_toEndOf="@+id/tv_cancel"
            app:layout_constraintTop_toTopOf="@+id/tv_cancel" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/panel_bg_top_1c242a"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_close">

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="44dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RadioButton
                android:id="@+id/btn12H"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:button="@null"
                android:checked="true"
                android:drawablePadding="12dp"
                android:fontFamily="@font/inter_bold"
                android:text="@string/am_pm"
                android:textColor="@color/color1396ef"
                android:textSize="24sp" />
            <RadioButton
                android:id="@+id/btn24H"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:button="@null"
                android:drawablePadding="12dp"
                android:fontFamily="@font/inter_bold"
                android:text="@string/_12_hours"
                android:textColor="@color/colorADB8C2"
                android:textSize="24sp" />
        </RadioGroup>


        <com.dyaco.spirit_commercial.support.custom_view.wheelPicker.DatePickerView
            android:id="@+id/dateTimePickerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/topLine"
            app:layout_constraintBottom_toTopOf="@+id/bottomLine"
            app:layout_constraintStart_toStartOf="parent" />


        <com.dyaco.spirit_commercial.support.custom_view.wheelPicker.OptionsPickerView
            android:visibility="gone"
            android:id="@+id/pick24hHour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="139dp"
            app:layout_constraintTop_toBottomOf="@+id/topLine"
            app:layout_constraintBottom_toTopOf="@+id/bottomLine"
            app:layout_constraintEnd_toStartOf="@+id/center24H" />

        <TextView
            android:visibility="gone"
            android:fontFamily="@font/inter_bold"
            android:id="@+id/center24H"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:includeFontPadding="false"
            android:text=":"
            android:textColor="@color/white"
            android:textSize="54sp"
            android:layout_marginEnd="358dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/pick24hHour"
            app:layout_constraintTop_toTopOf="@+id/pick24hHour"
            tools:ignore="HardcodedText" />

        <com.dyaco.spirit_commercial.support.custom_view.wheelPicker.OptionsPickerView
            android:visibility="gone"
            android:id="@+id/pick24hMinute"
            android:layout_marginStart="132dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/topLine"
            app:layout_constraintBottom_toTopOf="@+id/bottomLine"
            app:layout_constraintStart_toEndOf="@+id/center24H" />


        <com.dyaco.spirit_commercial.support.custom_view.wheelPicker.OptionsPickerView
            android:id="@+id/pick12hHour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="60dp"
            app:layout_constraintTop_toBottomOf="@+id/topLine"
            app:layout_constraintBottom_toTopOf="@+id/bottomLine"
            app:layout_constraintEnd_toStartOf="@+id/center12H" />

        <TextView
            android:fontFamily="@font/inter_bold"
            android:id="@+id/center12H"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:includeFontPadding="false"
            android:text=":"
            android:textColor="@color/white"
            android:textSize="54sp"
            android:layout_marginEnd="479dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/pick12hHour"
            app:layout_constraintTop_toTopOf="@+id/pick12hHour"
            tools:ignore="HardcodedText" />

        <com.dyaco.spirit_commercial.support.custom_view.wheelPicker.OptionsPickerView
            android:id="@+id/pick12hMinute"
            android:layout_marginStart="63dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/topLine"
            app:layout_constraintBottom_toTopOf="@+id/bottomLine"
            app:layout_constraintStart_toEndOf="@+id/center12H" />

        <com.dyaco.spirit_commercial.support.custom_view.wheelPicker.OptionsPickerView
            android:id="@+id/pickAmPm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:layout_marginEnd="89dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/pick12hHour"
            app:layout_constraintTop_toTopOf="@+id/pick12hHour"
            tools:ignore="HardcodedText" />



        <View
            android:id="@+id/topLine"
            android:layout_marginTop="322dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/color252e37"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>

        <View
            android:id="@+id/bottomLine"
            android:layout_marginBottom="328dp"
            app:layout_constraintBottom_toTopOf="@+id/btnSave"
            android:background="@color/color252e37"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:background="@color/color1396ef"
            android:stateListAnimator="@null"
            android:text="@string/Save"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="32sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
