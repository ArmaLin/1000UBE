<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/cl_base"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:layout_width="1193dp"
    android:layout_height="254dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivChannelIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="208dp"
        android:layout_height="208dp" />

    <TextView
        android:fontFamily="@font/inter_bold"
        android:textSize="44sp"
        android:textColor="@color/white"
        android:layout_marginStart="46dp"
        android:id="@+id/tvChannelTitle"
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivChannelIcon" />


    <TextView
        android:layout_marginTop="24dp"
        android:fontFamily="@font/inter_regular"
        android:textSize="32sp"
        android:textColor="@color/colorADB8C2"
        android:id="@+id/tvChannelContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvChannelTitle"
        app:layout_constraintStart_toStartOf="@+id/tvChannelTitle" />


    <TextView
        android:layout_marginTop="8dp"
        android:fontFamily="@font/inter_regular"
        android:textSize="24sp"
        android:textColor="@color/color5a7085"
        android:id="@+id/tvChannelTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvChannelContent"
        app:layout_constraintStart_toStartOf="@+id/tvChannelTitle" />

    <TextView
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/inter_bold"
        android:textSize="32sp"
        android:textColor="@color/color5a7085"
        android:id="@+id/tvChannelNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</androidx.constraintlayout.widget.ConstraintLayout>
