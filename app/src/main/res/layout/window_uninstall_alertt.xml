<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/half_transparent40"
    tools:context=".alert_message.UninstallAlertWindow">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/panel_bg_top_1c242a"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="488dp">

    <TextView
        android:includeFontPadding="false"
        android:id="@+id/tvWarring"
        android:gravity="center"
        android:fontFamily="@font/inter_regular"
        android:textSize="54sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="176dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Confirm uninstallation of the app?"
        android:layout_width="995dp"
        android:layout_height="wrap_content" />


        <androidx.appcompat.widget.AppCompatButton
            android:fontFamily="@font/inter_bold"
            android:textAllCaps="false"
            android:id="@+id/btnNotNow"
            android:stateListAnimator="@animator/btn_elevation_anim"
            android:background="@drawable/btn_gradient_dark"
            android:gravity="center"
            android:textSize="32sp"
            android:textColor="@color/white"
            android:text="@string/Cancel"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnRestart"
            android:layout_width="0dp"
            android:layout_height="96dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:fontFamily="@font/inter_bold"
            android:textAllCaps="false"
            app:layout_constraintStart_toEndOf="@+id/btnNotNow"
            android:id="@+id/btnRestart"
            android:stateListAnimator="@animator/btn_elevation_anim"
            android:background="@drawable/btn_gradient"
            android:gravity="center"
            android:textSize="32sp"
            android:textColor="@color/white"
            android:text="@string/Confirm"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="96dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
