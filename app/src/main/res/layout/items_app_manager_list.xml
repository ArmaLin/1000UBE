<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/cl_base"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="118dp"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_marginStart="8dp"
        android:id="@+id/drag_line"
        android:padding="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_three_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:gravity="end|center"
        tools:text="1"
        android:maxLines="1"
        android:autoSizeMaxTextSize="24sp"
        android:autoSizeTextType="uniform"
        android:layout_marginStart="12dp"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:fontFamily="@font/inter_extrabold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/drag_line"
        app:layout_constraintEnd_toStartOf="@+id/ivAppIcon"
        android:id="@+id/tvSort"
        android:minWidth="29dp"
        android:layout_width="29dp"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatImageView
        app:layout_constraintStart_toEndOf="@+id/tvSort"
        android:layout_marginStart="24dp"
        android:fontFamily="@font/inter_regular"
        android:id="@+id/ivAppIcon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

<!--    <androidx.appcompat.widget.AppCompatTextView-->
<!--        android:visibility="gone"-->
<!--        android:fontFamily="@font/inter_regular"-->
<!--        android:textSize="18sp"-->
<!--        android:textColor="@color/color8192a2"-->
<!--        tools:text="name"-->
<!--        android:id="@+id/tvAppName"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginTop="4dp"-->
<!--        app:layout_constraintStart_toStartOf="@+id/ivAppIcon"-->
<!--        app:layout_constraintEnd_toEndOf="@+id/ivAppIcon"-->
<!--        app:layout_constraintTop_toBottomOf="@+id/ivAppIcon"/>-->

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_marginEnd="34dp"
        android:visibility="invisible"
        android:fontFamily="@font/inter_regular"
        android:textSize="24sp"
        android:textColor="@color/colore24b44"
        tools:text="name"
        android:id="@+id/tvVersionName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvConsoleVersionName"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:fontFamily="@font/inter_regular"
        android:textSize="24sp"
        android:textColor="@color/color8192a2"
        tools:text="name"
        android:id="@+id/tvAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivAppIcon" />


    <androidx.appcompat.widget.AppCompatTextView
        android:fontFamily="@font/inter_regular"
        android:textSize="24sp"
        android:textColor="@color/colore24b44"
        tools:text="name"
        android:id="@+id/tvConsoleVersionName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <androidx.appcompat.widget.AppCompatTextView
        android:drawablePadding="11dp"
        android:drawableTint="@color/color445565"
        android:drawableEnd="@drawable/icon_check"
        android:fontFamily="@font/inter_bold"
        android:textSize="24sp"
        android:textColor="@color/color445565"
        android:text="@string/up_to_date"
        android:id="@+id/btnUpdate"
        android:layout_marginEnd="56dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:padding="30dp"
        android:visibility="visible"
        android:drawablePadding="11dp"
        android:drawableTint="@color/btn_1396ef_445565"
        android:drawableEnd="@drawable/icon_update"
        android:fontFamily="@font/inter_bold"
        android:textSize="24sp"
        android:textColor="@color/btn_1396ef_445565"
        android:text="@string/Update"
        android:id="@+id/btnUpdateOK"
        android:layout_marginEnd="26dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />


    <androidx.appcompat.widget.AppCompatImageView
        android:padding="40dp"
        android:layout_marginEnd="250dp"
        android:background="@drawable/btn_media_del"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/btnDelete"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>
