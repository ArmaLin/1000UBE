<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fl_root"
    android:layout_width="795dp"
    android:layout_height="match_parent"
    tools:context=".garmin.GarminDevicesWindow"
    android:background="@drawable/bg_overlay_settings">
    <!--+68-->

    <TextView
        android:autoSizeTextType="uniform"
        android:autoSizeMaxTextSize="70sp"
        android:id="@+id/hrTitle"
        android:fontFamily="@font/inter_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="70sp"
        android:textColor="@color/white"
        android:text="@string/Garmin_Devices"
        android:layout_marginTop="56dp"
        android:layout_marginStart="124dp"
        android:layout_width="430dp"
        android:layout_height="wrap_content"/>

    <com.google.android.material.button.MaterialButton
        style="@style/MButton_252e37"
        android:id="@+id/btn_close"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:layout_width="wrap_content"
        android:layout_height="88dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="56dp"
        android:text="@string/Close"
        android:textSize="24sp"
        app:icon="@drawable/icon_cancel"
        app:iconGravity="textEnd"
        app:iconPadding="12dp"
        app:iconTint="@color/colorADB8C2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/vLine"
        android:background="@color/color252e37"
        android:layout_marginTop="294dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="735dp"
        android:layout_height="2dp"/>

    <TextView
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="56dp"
        android:layout_marginStart="124dp"
        android:id="@+id/no_device_text"
        android:layout_marginBottom="56dp"
        android:fontFamily="@font/inter_regular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="24sp"
        android:textColor="@color/color5a7085"
        android:textAllCaps="false"
        android:text="@string/you_haven_t_connected_any_garmin_devices_yet"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <androidx.recyclerview.widget.RecyclerView
        tools:listitem="@layout/items_garmin_device_list"
        tools:itemCount="10"
        android:id="@+id/recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:fadeScrollbars="false"
        android:fadingEdge="none"
        android:overScrollMode="never"
        android:paddingTop="1dp"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/vLine"
        app:layout_constraintStart_toStartOf="@+id/vLine"
        app:layout_constraintTop_toBottomOf="@+id/vLine" />

    <View
        android:background="@color/half_transparent30"
        android:visibility="gone"
        android:clickable="true"
        android:id="@+id/hideView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ProgressBar
        android:layout_marginStart="68dp"
        android:id="@+id/progress2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:indeterminateDrawable="@drawable/progressbar_hr"
        android:visibility="invisible"
        android:layout_marginBottom="378dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ProgressBar
        android:layout_marginStart="68dp"
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:indeterminateDrawable="@drawable/progressbar_hr"
        android:visibility="visible"
        android:layout_marginBottom="378dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
