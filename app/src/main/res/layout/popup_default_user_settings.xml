<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fl_root"
    android:layout_width="1209dp"
    android:layout_height="match_parent"
    android:background="@drawable/bg_overlay_device"
    tools:context=".maintenance_mode.DefaultUserSettingWindow">
    <!-- +24-->

    <TextView
        android:layout_width="731dp"
        android:layout_height="88dp"
        android:layout_marginStart="81dp"
        android:layout_marginTop="56dp"
        android:text="@string/default_user_settings"
        android:textColor="@color/white"
        android:textSize="70sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:id="@+id/btn_close"
        android:layout_width="182dp"
        android:layout_height="88dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="48dp"
        android:background="@drawable/panel_bg_all_252e37"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="82dp"
            android:layout_height="32dp"
            android:layout_marginStart="34dp"
            android:layout_marginTop="28dp"
            android:text="@string/Close"
            android:textColor="@color/colorADB8C2"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:src="@drawable/icon_cancel"
            app:layout_constraintBottom_toBottomOf="@+id/tv_cancel"
            app:layout_constraintStart_toEndOf="@+id/tv_cancel"
            app:layout_constraintTop_toTopOf="@+id/tv_cancel" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
