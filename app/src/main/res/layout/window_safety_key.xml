<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/color11151a"
    android:layout_width="match_parent"
    tools:context=".alert_message.SafetyKeyWindow"
    android:layout_height="match_parent">


    <androidx.appcompat.widget.AppCompatTextView
        android:drawablePadding="25dp"
        android:drawableStart="@drawable/icon_attention"
        android:id="@+id/tvErrorMsg"
        android:layout_marginStart="460dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/please_replace_the_safety_key"
        android:textColor="@color/white"
        android:fontFamily="@font/inter_regular"
        android:textSize="54sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>