<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/half_transparent50"
    tools:context=".support.wifi.AlertRemoveWifiWindow">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ccl"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:background="@drawable/panel_bg_top_1c242a_stroke"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:fontFamily="@font/inter_regular"
            android:gravity="center"
            android:text="Forget?"
            android:textColor="@color/white"
            android:textSize="54sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            app:layout_constraintTop_toBottomOf="@+id/tvTitle"
            android:id="@+id/tvStr"
            android:layout_width="932dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/inter_regular"
            android:gravity="center"
            android:textColor="@color/colorADB8C2"
            android:textSize="44sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnIgnore"
            android:layout_width="0dp"
            android:layout_height="96dp"
            android:background="@color/btn_click_252e37_323f4b"
            android:fontFamily="@font/inter_bold"
            android:gravity="center"
            android:stateListAnimator="@null"
            android:text="No"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="32sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnSetMaximum"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSetMaximum"
            android:layout_width="0dp"
            android:layout_height="96dp"
            android:background="@color/btn_click_1396ef"
            android:fontFamily="@font/inter_bold"
            android:gravity="center"
            android:stateListAnimator="@null"
            android:text="Forget"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="32sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnIgnore" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>