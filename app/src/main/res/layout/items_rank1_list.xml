<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/cl_base"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:fontFamily="@font/inter_regular"
        android:layout_marginStart="56dp"
        android:id="@+id/tvNo"
        android:layout_width="wrap_content"
        android:textColor="@color/colorADB8C2"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        tools:text="100"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:fontFamily="@font/inter_regular"
        android:textSize="24sp"
        android:textColor="@color/color5a7085"
        tools:text="name"
        android:layout_marginStart="132dp"
        android:id="@+id/tvMemberName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:fontFamily="@font/inter_bold"
        android:textSize="24sp"
        android:textColor="@color/colorADB8C2"
        tools:text="136.5"
        android:id="@+id/tvTotalHours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="56dp"
        app:layout_constraintBottom_toBottomOf="parent" />

    <View
        android:id="@+id/vMeUnderline"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/color1396ef"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
