<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="isUs"
            type="Boolean" />
        <variable name="isGGG" type="Boolean" />
        <import type="android.view.View" />

        <variable
            name="deviceSetting"
            type="com.dyaco.spirit_commercial.viewmodel.DeviceSettingViewModel" />

        <variable
            name="deviceSettingIntDef"
            type="com.dyaco.spirit_commercial.support.intdef.DeviceIntDef" />

        <variable
            name="workoutIntDef"
            type="com.dyaco.spirit_commercial.support.intdef.WorkoutIntDef" />

        <variable
            name="workoutViewModel"
            type="com.dyaco.spirit_commercial.viewmodel.WorkoutViewModel" />

        <variable
            name="programsEnum"
            type="com.dyaco.spirit_commercial.workout.programs.ProgramsEnum" />

        <variable
            name="formulaUtil"
            type="com.dyaco.spirit_commercial.support.FormulaUtil" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:animateLayoutChanges="true"
        android:background="@color/color11151a"
        app:layout_height="@{isUs &amp;&amp; !isGGG ? 584 : 856 }"
        app:layout_width="@{isUs &amp;&amp; !isGGG ? 1296 : 1398 }"
        tools:context=".workout.WorkoutGarminFragment"
        tools:layout_height="584dp"
        tools:layout_width="1296dp">

<!--        <androidx.constraintlayout.widget.Group-->
<!--            android:id="@+id/groupStatsss"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
