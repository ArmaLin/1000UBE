            <!--            android:text="@{@string/present(WorkoutData.currentIncline)}"-->
            <!--            android:text="@{String.valueOf(WorkoutData.currentIncline) + `%`}"-->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/vTopIncline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
