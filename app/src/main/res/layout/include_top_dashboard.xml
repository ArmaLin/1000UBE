        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btnSound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_top_sound"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:visibility="@{AppStatusViewModel.currentStatus != status.STATUS_LOGIN_PAGE &amp;&amp; AppStatusViewModel.currentStatus != status.STATUS_MAINTENANCE ? View.VISIBLE : View.INVISIBLE}"
            tools:ignore="SpeakableTextPresentCheck" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btnFan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
