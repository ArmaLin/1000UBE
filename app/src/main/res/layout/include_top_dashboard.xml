                app:layout_constraintTop_toTopOf="@+id/vTopSpeedBike" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/vTopCaloriesBike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1251.5dp"
