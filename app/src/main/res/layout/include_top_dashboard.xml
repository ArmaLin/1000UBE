            app:layout_constraintCircleRadius="24dp"
            app:layout_constraintEnd_toEndOf="@+id/ibAlert"
            app:layout_constraintTop_toTopOf="@+id/ibAlert"
            app:visibility="@{AppStatusViewModel.currentStatus == status.STATUS_IDLE || AppStatusViewModel.currentStatus == status.STATUS_LOGIN_PAGE || AppStatusViewModel.currentStatus == status.STATUS_SUMMARY ? (deviceSetting.alertNotifyCount > 0 ? View.VISIBLE : View.INVISIBLE) : View.INVISIBLE}" />

        <!--        app:visibility="@{AppStatusViewModel.currentStatus == status.STATUS_IDLE || AppStatusViewModel.currentStatus == status.STATUS_LOGIN_PAGE || AppStatusViewModel.currentStatus == status.STATUS_SUMMARY ? View.VISIBLE : View.INVISIBLE}" />-->

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnGarmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="@{deviceSetting.isGarminEnabled ? 1f : 0.5f}"
            android:background="@drawable/btn_garmin"
            android:clickable="@{deviceSetting.isGarminEnabled}"
            android:contentDescription="@string/Garmin"
