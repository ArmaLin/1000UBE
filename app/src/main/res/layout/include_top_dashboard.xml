            app:visibility="@{WorkoutData.isGarminConnected ? (AppStatusViewModel.currentStatus != status.STATUS_LOGIN_PAGE &amp;&amp; AppStatusViewModel.currentStatus != status.STATUS_MAINTENANCE &amp;&amp; AppStatusViewModel.currentStatus != status.STATUS_RUNNING ? View.VISIBLE : View.INVISIBLE) : View.INVISIBLE}" />


        <TextView
            android:id="@+id/tvSpo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/inter_bold"
            android:text="@{WorkoutData.garminSpo2 + '%'}"
            android:textColor="@color/white"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="@+id/tvSpo2Unit"
            app:layout_constraintTop_toTopOf="parent"
            app:visibility="@{WorkoutData.isGarminConnected ? (AppStatusViewModel.currentStatus != status.STATUS_LOGIN_PAGE &amp;&amp; AppStatusViewModel.currentStatus != status.STATUS_MAINTENANCE &amp;&amp; AppStatusViewModel.currentStatus != status.STATUS_RUNNING ? View.VISIBLE : View.INVISIBLE) : View.INVISIBLE}" />


        <TextView
            android:id="@+id/tvSpo2Unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:layout_marginEnd="152dp"
            android:fontFamily="@font/inter_bold"
            android:text="@string/SPO2"
            android:textColor="@color/color8192a2"
            android:textSize="15sp"
            app:layout_constraintEnd_toStartOf="@+id/ivGarmin"
            app:layout_constraintTop_toTopOf="parent"
            app:visibility="@{WorkoutData.isGarminConnected ? (AppStatusViewModel.currentStatus != status.STATUS_LOGIN_PAGE &amp;&amp; AppStatusViewModel.currentStatus != status.STATUS_MAINTENANCE &amp;&amp; AppStatusViewModel.currentStatus != status.STATUS_RUNNING ? View.VISIBLE : View.INVISIBLE) : View.INVISIBLE}" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ibQrCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            app:backgroundResource="@{AppStatusViewModel.currentStatus == status.STATUS_LOGIN_PAGE ? R.drawable.btn_qrcode_default : R.drawable.btn_header_qrcode}"
            app:layout_constraintEnd_toStartOf="@+id/ibSetting"
            app:layout_constraintTop_toTopOf="parent"
            app:visibility="@{AppStatusViewModel.currentStatus == status.STATUS_IDLE || AppStatusViewModel.currentStatus == status.STATUS_LOGIN_PAGE || AppStatusViewModel.currentStatus == status.STATUS_SUMMARY ? View.VISIBLE : View.INVISIBLE}"
            tools:background="@drawable/btn_qrcode_default"
            tools:ignore="SpeakableTextPresentCheck" />

        <!--        android:clickable="@{AppStatusViewModel.currentStatus == status.STATUS_LOGIN_PAGE ? false : true}"-->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ibSetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundResource="@{AppStatusViewModel.currentStatus == status.STATUS_LOGIN_PAGE ? R.drawable.btn_header_setting_default : R.drawable.btn_header_setting}"
            app:layoutMarginEnd="@{comm.setSettingIconDimen(AppStatusViewModel.currentStatus)}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:visibility="@{comm.settingIconShow(AppStatusViewModel.currentStatus)}"
            tools:background="@drawable/btn_header_setting_default"
            tools:ignore="SpeakableTextPresentCheck"
            tools:layout_marginEnd="270dp" />

        <View
            android:id="@+id/v_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/half_transparent20"
            android:clickable="true"
            android:visibility="gone" />

    </merge>

