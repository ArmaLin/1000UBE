<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="1185dp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/panel_bg_left_32_1c242a"
    tools:context=".maintenance_mode.MaintenanceFirmwareTestFragment">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="88dp"
            android:layout_marginStart="56dp"
            android:layout_marginTop="56dp"
            android:fontFamily="@font/inter_bold"
            android:includeFontPadding="false"
            android:text="@string/Firmware"
            android:textColor="@color/white"
            android:textSize="70sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            style="@style/MButton_252e37"
            android:id="@+id/btnDone"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            android:layout_width="wrap_content"
            android:layout_height="88dp"
            android:layout_marginTop="56dp"
            android:layout_marginEnd="56dp"
            android:text="@string/Done"
            android:textSize="24sp"
            app:icon="@drawable/icon_check"
            app:iconGravity="textEnd"
            app:iconPadding="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:background="@color/color252e37"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="198dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>

        <TextView
            android:id="@+id/tvLwr"
            android:layout_marginStart="56dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="232dp"
            android:fontFamily="@font/inter_regular"
            android:textSize="32sp"
            android:textColor="@color/white"
            android:text="@string/LWR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvLwrVersion"
            android:layout_marginStart="531dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvLwr"
            app:layout_constraintBottom_toBottomOf="@+id/tvLwr"
            android:fontFamily="@font/inter_regular"
            android:textSize="24sp"
            android:textColor="@color/color8192a2"
            tools:text="Version 1.4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btnNoUpdateLwr"
            android:visibility="visible"
            android:drawablePadding="11dp"
            android:drawableTint="@color/color445565"
            android:drawableEnd="@drawable/icon_check"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="56dp"
            app:layout_constraintTop_toTopOf="@+id/tvLwr"
            app:layout_constraintBottom_toBottomOf="@+id/tvLwr"
            android:fontFamily="@font/inter_bold"
            android:textSize="24sp"
            android:textColor="@color/color445565"
            android:text="@string/up_to_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <androidx.appcompat.widget.AppCompatTextView
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:padding="10dp"
            android:visibility="invisible"
            android:id="@+id/btnUpdateLwr"
            android:drawablePadding="11dp"
            android:drawableTint="@color/color1396ef"
            android:drawableEnd="@drawable/icon_update"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="46dp"
            app:layout_constraintTop_toTopOf="@+id/tvLwr"
            app:layout_constraintBottom_toBottomOf="@+id/tvLwr"
            android:fontFamily="@font/inter_bold"
            android:textSize="24sp"
            android:textColor="@color/color1396ef"
            android:text="@string/Update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />




        <View
            android:background="@color/color252e37"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="302dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>

        <TextView
            android:id="@+id/tvSubMcu"
            android:text="@string/Sub_MCU"
            android:layout_marginStart="56dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="336dp"
            android:fontFamily="@font/inter_regular"
            android:textSize="32sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvSubMcuVersion"
            android:layout_marginStart="531dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvSubMcu"
            app:layout_constraintBottom_toBottomOf="@+id/tvSubMcu"
            android:fontFamily="@font/inter_regular"
            android:textSize="24sp"
            android:textColor="@color/color8192a2"
            tools:text="Version 3.0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btnNoUpdateSubMcu"
            android:visibility="visible"
            android:drawablePadding="11dp"
            android:drawableTint="@color/color445565"
            android:drawableEnd="@drawable/icon_check"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="56dp"
            app:layout_constraintTop_toTopOf="@+id/tvSubMcu"
            app:layout_constraintBottom_toBottomOf="@+id/tvSubMcu"
            android:fontFamily="@font/inter_bold"
            android:textSize="24sp"
            android:textColor="@color/color445565"
            android:text="@string/up_to_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <androidx.appcompat.widget.AppCompatTextView
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:padding="10dp"
            android:visibility="invisible"
            android:id="@+id/btnUpdateSubMcu"
            android:drawablePadding="11dp"
            android:drawableTint="@color/color1396ef"
            android:drawableEnd="@drawable/icon_update"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="46dp"
            app:layout_constraintTop_toTopOf="@+id/tvSubMcu"
            app:layout_constraintBottom_toBottomOf="@+id/tvSubMcu"
            android:fontFamily="@font/inter_bold"
            android:textSize="24sp"
            android:textColor="@color/color1396ef"
            android:text="@string/Update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:background="@color/color252e37"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="406dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>


        <ProgressBar
            android:visibility="invisible"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/progressbar_hr"
            android:id="@+id/progress"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>