<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="904dp"
    android:background="@android:color/transparent"
    android:id="@+id/baseView"
    tools:context=".login.CreateAccountGenderFragmentBottom">


    <com.google.android.material.button.MaterialButton
        android:letterSpacing="0.01"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:id="@+id/btn_close"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:layout_width="wrap_content"
        android:layout_height="88dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="56dp"
        android:background="@drawable/panel_close"
        android:fontFamily="@font/inter_bold"
        android:stateListAnimator="@null"
        android:text="@string/Close"
        android:textAllCaps="false"
        android:textColor="@color/colorADB8C2"
        android:textSize="24sp"
        app:backgroundTint="@color/color252e37"
        app:backgroundTintMode="src_in"
        app:icon="@drawable/icon_cancel"
        app:iconGravity="textEnd"
        app:iconPadding="12dp"
        app:iconTint="@color/colorADB8C2"
        app:layout_constraintBottom_toTopOf="@+id/v_1"
        app:layout_constraintEnd_toEndOf="parent" />


    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintBottom_toTopOf="@+id/btnNext"
        android:background="@drawable/panel_bg_top_1c242a"
        android:layout_gravity="bottom"
        android:id="@+id/v_1"
        android:layout_width="match_parent"
        android:layout_height="736dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_marginStart="28dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/element_pagination_onboarding_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/stext"
            android:includeFontPadding="false"
            android:layout_marginTop="332dp"
            android:textColor="@color/white"
            android:text="@string/what_is_your_biological_gender"
            android:textSize="54sp"
            android:fontFamily="@font/inter_regular"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="261dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioGroup
            android:orientation="horizontal"
            android:id="@+id/rg_gender"
            app:layout_constraintTop_toTopOf="@+id/stext"
            app:layout_constraintBottom_toBottomOf="@+id/stext"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="1209dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:background="@drawable/btn_gender_female"
                android:id="@+id/btnFemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:button="@null"
                android:checked="true" />

            <RadioButton
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:textColor="@color/white"
                android:background="@drawable/btn_gender_male"
                android:id="@+id/btnMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:button="@null"
                android:checked="false" />
        </RadioGroup>

        <TextView
            android:id="@+id/femaleText"
            android:includeFontPadding="false"
            android:fontFamily="@font/inter_bold"
            android:layout_marginStart="54dp"
            android:layout_marginBottom="36dp"
            app:layout_constraintStart_toStartOf="@+id/rg_gender"
            app:layout_constraintBottom_toBottomOf="@+id/rg_gender"
            android:textSize="32sp"
            android:text="@string/Female"
            android:textColor="@color/color1396ef"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/maleText"
            android:includeFontPadding="false"
            android:fontFamily="@font/inter_bold"
            android:layout_marginEnd="98dp"
            android:layout_marginBottom="36dp"
            app:layout_constraintEnd_toEndOf="@+id/rg_gender"
            app:layout_constraintBottom_toBottomOf="@+id/rg_gender"
            android:textSize="32sp"
            android:text="@string/Male"
            android:textColor="@color/color5a7085"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </androidx.constraintlayout.widget.ConstraintLayout>



    <androidx.appcompat.widget.AppCompatButton
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:fontFamily="@font/inter_bold"
        android:stateListAnimator="@null"
        android:textAllCaps="false"
        android:id="@+id/btnBack"
        android:background="@color/color252e37"
        android:gravity="center"
        android:textSize="32sp"
        android:textColor="@color/white"
        android:text="@string/back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnNext"
        android:layout_width="0dp"
        android:layout_height="96dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:fontFamily="@font/inter_bold"
        android:stateListAnimator="@null"
        android:textAllCaps="false"
        app:layout_constraintStart_toEndOf="@+id/btnBack"
        android:id="@+id/btnNext"
        android:background="@color/color1396ef"
        android:gravity="center"
        android:textSize="32sp"
        android:textColor="@color/white"
        android:text="@string/Next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="96dp" />

</androidx.constraintlayout.widget.ConstraintLayout>