<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <!-- 倒三角 -->
        <rotate
            android:fromDegrees="45"
            android:pivotX="135%"
            android:pivotY="15%"
            android:toDegrees="45">
            <shape android:shape="rectangle">
                <size
                    android:width="10dp"
                    android:height="10dp" />
                <solid android:color="#1396ef" />
            </shape>
        </rotate>
    </item>
</layer-list>

