<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <item android:top="110dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#40000000"
            android:endColor="@android:color/transparent" />
            <size
                android:width="200dp"
                android:height="20dp"/>
        </shape>
    </item>

    <item android:top="10dp">
        <shape>
            <solid android:color="@color/btn_click_e24b44" />

            <size
                tools:width="200dp"
                tools:height="100dp"/>
            <stroke
                android:width="1dp"
                android:color="@color/color1c242a" />
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- 上方的箭頭指示 -->
  <item android:drawable="@drawable/triangle_up_e24b44" android:start="20dp" android:top="-12dp" android:width="20dp" android:height="20dp"/>

    <!-- 右上角的關閉按鈕 -->
  <item android:drawable="@drawable/baseline_close_24" android:gravity="end|top" android:end="24dp" android:top="28dp"/>


</layer-list>