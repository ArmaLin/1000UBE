<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 按下狀態 -->
    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="0" android:endColor="#E6305573" android:startColor="#E6407099" />
            <corners android:radius="32dp" />
        </shape>
    </item>

    <!-- 默認狀態 -->
    <item>
        <shape>
            <gradient android:angle="0" android:endColor="#FF305573" android:startColor="#FF407099" />
            <corners android:radius="32dp" />
        </shape>
    </item>
</selector>


